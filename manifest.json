{
   "manifest_version": 3,
   "name": "API Debug Mate",
   "version": "1.0",
   "description": "Show the current page link",
   "background": {
      "service_worker": "background.js"
  },
   "action": {
      "default_icon": {
         "128": "assets/icon128.png",
         "48": "assets/icon48.png",
         "32": "assets/icon32.png",
         "16": "assets/icon16.png"
      },
      "default_popup": "popup.html",
      "default_title": "API Debug Mate"
   },
   "icons": {
      "128": "assets/icon128.png",
      "48": "assets/icon48.png",
      "32": "assets/icon32.png",
      "16": "assets/icon16.png"
   },
   "permissions": ["webRequest", "nativeMessaging", "storage", "cookies", "activeTab", "tabs"],
   "host_permissions": [ "*://*/**" ]
}
